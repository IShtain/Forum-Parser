<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_drawer"
                android:padding="@dimen/padding_default">

    <ImageView
        android:id="@+id/ivAvatar_VDH"
        android:layout_width="@dimen/avatar_large"
        android:layout_height="@dimen/avatar_large"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:background="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tvName_VDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivAvatar_VDH"
        android:layout_marginTop="@dimen/margin_quart"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/drawer_header_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_default"/>


</RelativeLayout>